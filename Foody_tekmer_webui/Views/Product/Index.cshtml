@model List<FoodyTekmerEntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    
    <h3>Ürün Listesi</h3>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>İsim</th>
            <th>Eski Fiyat</th>
            <th>Yeni Fiyat</th>
            <th>Durum</th>
            <th>Durum Değiştir</th>
            <th>Düzenle</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.OldPrice</td>
                <td>@item.NewPrice</td>
                @if (item.status)
                {

                    <td>  <span class="badge bg-success">Aktif</span> </td>
                    <td><a href="/Product/ChangeStatus/@item.Id" class="btn btn-outline-danger">Pasif Yap</a></td>
                }

                else
                {
                    <td> <span class="badge bg-danger">Pasif</span> </td>
                    <td><a href="/Product/ChangeStatus/@item.Id" class="btn btn-outline-success">Aktif Yap</a></td>
                }


                <td><a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-primary">Düzenle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct" class="btn btn-outline-success">Yeni Ürün Ekle</a>
</div>
